<body>

<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Project name</a>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li class="active"> <%= link_to 'Home', root_path%></li>
        <li><a href="#about">About</a></li>
        <li><a href="#contact">Contact</a></li>
      </ul>
      <ul class="nav navbar-nav pull-right">
        <% if user_signed_in? %>
            <li><%=link_to "#{current_user.email}"%></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Account<span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'User Profile', edit_user_registration_path%></li>
                <li><%= link_to 'My Projects', projects_path%></li>
                <li class="divider"></li>
                <li class="dropdown-header"></li>
                <li><%= link_to "Logout", destroy_user_session_path%></li>
              </ul>
            </li>
        <%else%>
            <li><%= link_to "Login", new_user_session_path %></li>
            <li class="active"><%= link_to "SignUp", new_user_registration_path%></li>
        <%end%>
      </ul>
    </div>
    <!--/.nav-collapse -->
  </div>
</div>


<div class="container">

      <section id="navproject">
        <%= yield :navproject %>
      </section>

      <%= yield %>


    <section id="list_project">
      <%= yield :list_project %>
    </section>



        <section id="rewardsidebar">
          <%= yield :rewardsidebar %>
        </section>

  <section id="select_reward">
    <%= yield :reward_selected %>
  </section>


</div>
<!-- /.container -->

