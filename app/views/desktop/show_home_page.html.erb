<!--=== Blog Posts ===-->



<div class="background-color">
  <div class="container content-sm">



    <!-- Header menu -->
    <div clas="row">
      <div class="col-md-8">

        <div class="profile-body margin-bottom-20">
          <div class="tab-v3">
            <ul class="nav nav-justified nav-tabs">
              <li class="active"><a data-toggle="tab" href="#campaign">Campaign</a></li>
              <li><a data-toggle="tab" href="#updates">Updates</a></li>
              <li><a data-toggle="tab" href="#comments">Comments</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <!-- Header menu -->


    <div class="row">


      <!-- Blog All Posts -->
          <div class="col-md-8">
            <div class="news-v3 margin-bottom-60">
              <div class="news-v3-in">
                <div class="tab-content">

                  <!-- Campaign-->
                  <div id="campaign" class="profile-edit tab-pane fade in active">
                    <h2><%= @project.name%></h2>
                    <%= @project.pages.homepage.to_a.first.content.html_safe%>
                    <ul class="post-shares">
                      <li>
                        <a href="#">
                          <i class="rounded-x icon-speech"></i>
                          <span>26</span>
                        </a>
                      </li>
                      <li>
                        <a href="#">
                          <i class="rounded-x icon-share"></i>
                          <span>98</span>
                        </a>
                      </li>
                      <li>
                        <a href="#">
                          <i class="rounded-x icon-heart"></i>
                          <span>30</span>
                        </a>
                      </li>
                    </ul>
                  </div>
                  <!-- Campaign-->

                  <!-- Updates-->
                  <div id="updates" class="profile-edit tab-pane fade">
                    <ul class="timeline-v2">
                      <% @project.pages.updatepage.each do |update| %>
                          <li>
                            <time class="cbp_tmtime" datetime=""><%= update.updated_at.to_date%></time>
                            <i class="cbp_tmicon rounded-x hidden-xs"></i>
                            <div class="cbp_tmlabel">
                              <h2>Our first step</h2>
                              <div class="row">
                                <div class="col-md-4">
                                  <img class="img-responsive" src="assets/img/main/img1.jpg" alt="">
                                  <div class="md-margin-bottom-20"></div>
                                </div>
                                <div class="col-md-8">
                                  <div class="row">
                                    <p><%= update.content.html_safe %></p>
                                  </div>
                                  <div class="row">
                                    <div class="timeline-footer">
                                      <ul class="list-unstyled list-inline blog-info">
                                        <li><i class="fa fa-comments-o"></i> <a href="#">7 Comments</a></li>
                                      </ul>
                                    </div>
                                  </div>
                                </div>

                              </div>
                            </div>
                          </li>
                      <% end %>
                    </ul>
                  </div>
                  <!-- Updates-->

                  <!-- Comments-->
                  <div id="comments" class="profile-edit tab-pane fade">

                    <%= form_for([@project, @project.comments.new], html: { method: :post, class: 'sky-form'  }) do |f|  %>

                        <fieldset>
                          <dl class="dl-horizontal">
                            <dt>Post your comment</dt>
                            <dd>
                              <section>
                                <label class="textarea textarea-resizable">
                                  <%= f.text_area :content, class: 'form-control', placeholder: 'Put your comment here'%>
                                </label>
                              </section>
                            </dd>


                            <br>

                            <button class="btn-u" type="submit">Save comment</button>

                          </dl>
                        </fieldset>
                    <% end %>


                    <% @project.comments.each do |comment| %>

                        <div class="panel panel-profile">

                          <div class="panel-body">
                            <div class="media media-v2">
                              <a class="pull-left" href="#">
                                <%= image_tag('img2.jpg', class: 'media-object rounded-x') %>
                              </a>
                              <div class="media-body">
                                <h4 class="media-heading">
                                  <strong><a> <%= comment.username %></a></strong>

                                  <small class="pull-right"><%= comment.created_at %></small>

                                </h4>
                                <p>
                                  <%= comment.content %>
                                </p>
                                <ul class="list-inline results-list pull-left">
                                  <li><a href="#">25 Likes</a></li>
                                  <li><a href="#">10 Share</a></li>
                                </ul>
                                <ul class="list-inline pull-right">
                                  <li><a href="#"><i class="expand-list rounded-x fa fa-reply"></i></a></li>
                                  <li><a href="#"><i class="expand-list rounded-x fa fa-like"></i></a></li>
                                </ul>
                              </div>
                            </div><!--/end media media v2-->
                          </div>
                        </div>
                    <% end %>
                    <button type="button" class="btn-u btn-u-default btn-block">Load More</button>
                  </div>

                  <!-- Comments-->


                 </div>
              </div>
            </div>
          </div>
      <!-- Blog Sidebar -->
      <div class="col-md-4">
        <% @project.rewards.each do |reward| %>
            <div class="row margin-bottom-40 pricing-light">
              <div class="col-md-10">
                  <div class="pricing hover-effect">
                    <%if reward.has_bonus? %>
                        <div class="sticker-right">Bonus</div>
                    <%end%>
                        <div class="pricing-head">
                         <h2><%=reward.name%></h2>
                          <h2><i>$</i><%=reward.amount%></h2>
                        </div>
                        <ul class="pricing-content list-unstyled">
                          <li><%=reward.description%></li>
                          <li><i class="fa fa-angellist"></i>Taken <%=reward.taken%> from  <%=reward.maximum_backers%><span></span></li>
                          <li><i class="fa fa-send"></i>Estimated delivery <%=reward.estimated_delivery_at%><span></span></li>
                          <li><i class="fa fa-"></i>Shipping details <span></span></li>
                        </ul>
                        <div class="pricing-footer">
                          <%= link_to  project_reward_path(@project, reward), class: 'btn-u' do %>
                              <%= content_tag(:i, '', class: 'fa fa-angellist') %>
                              <%= content_tag(:t, ' Contribute') %>
                          <% end %>

                        </div>
                  </div>
              </div>
            </div>
        <%end%>
      </div><!-- End Blog Sidebar -->
    </div>
  </div>
</div><!--=== End Blog Posts ===-->


