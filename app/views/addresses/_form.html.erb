<%= form_for ([@project, @reward, @address]), :html => {:class => "form-horizontal center"} do |f| %>


    <div class="form-group">
      <legend></legend>
    </div>


    <% if @address.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@contribution.errors.count, "error") %> prohibited this payment from being saved:</h2>

          <ul>
            <% @contribution.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


    <h3> Add shipping information </h3>

    <div class="form-group">
      <%= f.label :street, class: "col-sm-2 control-label" %>
      <div class="col-sm-6">
        <%= f.text_field :street, class: "form-control"%>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :phone_number, class: "col-sm-2 control-label" %>
      <div class="col-sm-6">
        <%= f.text_field :phone_number, class: "form-control"%>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :zip_code, class: "col-sm-2 control-label" %>
      <div class="col-sm-6">
        <%= f.text_field :zip_code, class: "form-control"%>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :city, class: "col-sm-2 control-label" %>
      <div class="col-sm-6">
        <%= f.text_field :city, class: "form-control"%>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :state, class: "col-sm-2 control-label" %>
      <div class="col-sm-6">
        <%= f.text_field :state, class: "form-control"%>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :country, class: "col-sm-2 control-label" %>
      <div class="col-sm-6">
        <%= f.text_field :country, class: "form-control"%>
      </div>
    </div>

    <div class="form-group">
      <div>
        <%= f.hidden_field :address_type , class: "form-control"  %>
      </div>
    </div>

    <% if current_user.addresses.size > 0 %>
        <h3>Select from address list</h3>
        <div class="form-group">
          <%= f.label 'Address', class: "col-sm-2 control-label" %><br>
          <div class="col-sm-6">
              <%= f.fields_for current_user.addresses do |a| %>
                  <%= a.select(:id, options_from_collection_for_select(current_user.addresses, :id, :street), {prompt: 'Please Choose'}, class: "form-control") %>
              <% end %>
          </div>
        </div>
    <% end %>





<div class="form-group">
  <div class="col-sm-10 col-sm-offset-2">
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</div>

<% end %>


