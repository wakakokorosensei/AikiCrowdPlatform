<%= content_for :reward_selected do %>
    <%= form_for ([@project, @reward]), :html => {:class => "form-horizontal center"} do |f| %>
    <header><h1>          </h1></header>

    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
      <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="headingOne">
          <h4 class="panel-title">
            <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
              Reward selected
            </a>
          </h4>
        </div>
        <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">


          <div class="panel-body">
            <div class="panel" id="midCol">

              <div class="panel-body">
                <section id="reward_asigned">

                    <div class="row">

                      <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                        <div class="thumbnail">
                          <img class="img-responsive" src="<%= image_url(@project.short_image, class: 'list_image')%>"  alt="Imagen">
                        </div>
                      </div>

                      <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
                        <div class="caption">
                          <h3><%= @reward.name %></h3>
                          <p>
                            <%=@reward.description %>
                          </p>
                          <p>
                            <%=number_to_currency(@reward.price) %>
                          </p>
                        </div>
                      </div>
                    </div>

                <div class="row">
                  <nav>
                    <ul class="pager">
                      <li> <%= link_to 'Back to project', project_path(@project)%></li>
                      <li> <%= link_to 'Contribute',    new_project_reward_contribution_path(@project, @reward)%></li>
                    </ul>
                  </nav>
                </div>



                </section>

              </div>
            </div>
          </div><!--/panel-->


        </div>
      </div>







      <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="headingTwo">
          <h4 class="panel-title">
            <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
              Change reward
            </a>
          </h4>
        </div>
        <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
          <div class="panel-body">
            <div class="panel" id="midCol">
              <div class="panel-heading" style="background-color:#555;color:#eee;">Change Reward</div>
              <div class="panel-body">

                <section id="reward_asigned">

                  <header><h1>Select Reward</h1></header>
                  <article>
                    <% @project.rewards.each do |reward| %>

                        <div class="thumbnail">
                          <img data-src="3" alt="">
                          <div class="caption">
                            <h3><%= link_to reward.name,    project_select_reward_path(@project, reward)%></h3>
                            <p>
                              <%=reward.description %>
                            </p>
                            <p>
                              <%=number_to_currency(reward.price) %>
                            </p>
                          </div>
                        </div>

                    <% end %>
                  </article>
                </section>

              </div>
            </div><!--/panel-->
          </div>
        </div>
      </div>
    </div>

    <% end %>
<% end %>
