<%= extends :project_setup_sidebar do%>
    <%= area :project_edit_reward do%>
        <div class="col-md-9">

          <%= form_for([@project, @reward], html: { method: :put, class: 'sky-form', id:'sky-form'  }) do |f|  %>
              <header>Reward</header>
              <fieldset>
                <dl class="dl-horizontal">
                  <dt>Name</dt>
                  <dd>
                    <section>
                      <label class="input">
                        <i class="icon-append fa fa-user"></i>
                        <%= f.text_field :name, class: "form-control",autofocus: true %>
                      </label>
                    </section>
                  </dd>

                  <dt>Price</dt>
                  <dd>
                    <section>
                      <label class="input">
                        <i class="icon-append fa fa-user"></i>
                        <%= f.text_field :amount, class: "form-control",autofocus: true %>
                      </label>
                    </section>
                  </dd>

                  <dt>Maximun backers</dt>
                  <dd>
                    <section>
                      <label class="input">
                        <i class="icon-append fa fa-user"></i>
                        <%= f.text_field :maximum_backers , class: "form-control",autofocus: true %>
                      </label>
                    </section>
                  </dd>

                  <dt>Description</dt>
                  <dd>
                    <section>
                      <label class="input">
                        <i class="icon-append fa fa-user"></i>
                        <%= f.text_field :description , class: "form-control",autofocus: true %>
                      </label>
                    </section>
                  </dd>

                  <dt>Estimated delivery ESTE NO FUNCIONA COMO QUIERO</dt>
                  <dd>
                    <section>
                      <label class="input">
                        <i class="icon-append fa fa-calendar"></i>
                        <%= f.text_field :estimated_delivery_at , class: 'hasDatepicker'%>
                      </label>
                    </section>

                    <fieldset>
                      <section>
                        <label class="label">Select single date</label>
                        <label class="input">
                          <i class="icon-append fa fa-car"></i>
                          <input type="text" id="date">
                        </label>
                      </section>
                    </fieldset>
                  </dd>







                </dl>

                <br>

                <button class="btn-u" type="submit">Save</button>

              </fieldset>
          <% end %>
        </div>

    <% end %>
<% end %>

